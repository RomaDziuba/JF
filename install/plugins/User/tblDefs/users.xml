<?xml version="1.0" encoding="UTF-8" ?>
<table  charset="UTF-8" name="users" primaryKey="id" defaultOrderField="id" defaultOrderDirection="ASC" rowsForPage="50">
    
    <fields>
        <field type="readonly" caption="ID" sorting="true" name="id" trim="60" width="5%" />
        
        <field type="text" clicable="true" name="login" caption="Login"   width="20%" filter="text" sorting="yes" required="true" />
        <field type="md5" name="pass" caption="Пароль" hide="true" required="true"  />
        <field type="text" name="email" caption="E-mail" filter="text" sorting="true" width="20%" required="true" />
        <field type="text" name="name" caption="Name"   width="20%" sorting="yes" required="true" />
        <field type="foreignKey" name="id_type" caption="Type"  sorting="true" foreignTable="user_types" foreignKeyField="id" foreignValueField="caption" filter="select" width="20%"/>
        <field type="foreignKey" name="id_dealer" allowEmpty="true" isnull="true" caption="Dealer"  sorting="true" join="true" foreignTable="dealers" foreignKeyField="id" foreignValueField="caption" filter="select" width="20%"/>
        
        <field type="select" caption="Status" sorting="true" name="status" filter="select" width="10%">
            <option id="new">New</option>
            <option id="active">Active</option>
            <option id="deleted">Deleted</option>
        </field>
    </fields>
    
    <actions>
        <action type="insert" caption="Add" />
        <!--<action type="asd" caption="Adwwd" view="list" />
        <action type="dfs" caption="Awwwdd" view="list" />-->
        <action type="list"   caption="Users" />
        <action type="edit"   caption="Edit" /> 
        <action type="remove" caption="Remove" />
    </actions>

</table>
